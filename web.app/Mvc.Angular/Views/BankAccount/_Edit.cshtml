<div ng-controller="bankAccountEditController as vm" ng-init="vm.initializeController()">
    <rd-widget>
        <rd-widget-header icon="fa-tasks" title="{{vm.title}}">
        </rd-widget-header>
        <rd-widget-body>
            <div class="box" style="width: 100%">
                <div class="box-content">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-sm-2 control-label required">Account Number</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" ng-model="vm.AccountNumber" ng-class="{'validation-error': vm.AccountNumberInputErrorInputError}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Account Name</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" ng-model="vm.AccountName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Account Nickname</label>

                            <div class="col-sm-4">
                                <input type="text" class="form-control" ng-model="vm.AccountNickName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Available Balance</label>

                            <div class="col-sm-4">
                                <input type="text" class="form-control" ng-model="vm.AvailableBalance">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Select a bank for this Account</label>
                            <div class="col-sm-4">
                                <select class="form-control" ng-model="vm.BankId" ng-options="b.BankId as b.BankName for b in vm.banks" ng-class="{'validation-error': vm.BankInputError}"></select>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <button class="btn btn-primary btn-label-left" ui-sref="accounts" href="#/accounts">
                <span><i class="fa fa-arrow-left"></i></span>
                <b>Back</b>
            </button>
            <button class="btn btn-success btn-label-left" ng-click="vm.saveAccount()">
                <span><i class="fa fa-save"></i></span>
                <b>Save</b>
            </button>
            <div style="padding-top:20px">
                <div uib-alert ng-repeat="alert in vm.alerts" ng-class="'alert-' + (alert.type || 'warning')" close="vm.closeAlert($index)">
                    <div ng-bind-html="vm.messageBox"></div>
                </div>
            </div>
        </rd-widget-body>
    </rd-widget>
</div>

