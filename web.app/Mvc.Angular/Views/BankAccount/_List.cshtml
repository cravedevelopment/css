<div ng-controller="bankAccountController as vm" ng-init="vm.initializeController()">
    <rd-widget>
        <rd-widget-header icon="fa-tasks" title="{{vm.title}}">
        </rd-widget-header>
        <rd-widget-body>
            <div class="table-responsive" style="padding-top: 20px;">
                <button class="btn btn-primary btn-label-left" ui-sref="newAccount">
                    <span><i class="icon-pencil"></i></span>
                    <b>New Account</b>
                </button>
                <div class="pull-right">
                    <input type="text" class="form-control" placeholder="Search Account" ng-model="searchAccount" />
                </div>
                <table class="table" style= "margin-top: 30px;">
                    <thead>

                        <tr>
                            <th colspan="2" style="width: 50%">
                                <span ng-bind="vm.totalAccounts"></span>&nbsp;Accounts
                            </th>
                            <th colspan="5" style="text-align: right; width: 50%">
                                Page&nbsp;<span ng-bind="vm.currentPageNumber"></span>&nbsp;of&nbsp;
                                <span ng-bind="vm.totalPages"></span>
                            </th>
                        </tr>

                        <tr>
                            <th ng:repeat="tableHeader in vm.tableHeaders" style="text-decoration: underline" ng:class="vm.setSortIndicator(tableHeader.label)" ng:click="vm.changeSorting(tableHeader.label)">{{tableHeader.label}}</th>
                        </tr>

                    </thead>
                    <tbody>
                        <tr ng-repeat="account in vm.accounts | filter : searchAccount">

                            <td style="width: 30%; white-space: nowrap">
                                <div ng-bind="account.AccountName"></div>
                            </td>
                            <td style="width: 30%; white-space: nowrap">
                                <div ng-bind="account.AccountNumber"></div>
                            </td>
                            <td style="width: 20%; white-space: nowrap">
                                <div>{{account.AvailableBalance | currency: "P"}}</div>
                            </td>
                            <td style="width: 30%; white-space: nowrap">
                                <div ng-bind="account.Bank.BankName"></div>
                            </td>
                            <td style="width: 20%; white-space: nowrap"><a ui-sref="account({ id: account.AccountId})" style="cursor: pointer; text-decoration: underline; color: black">Edit</a></td>
                        </tr>
                    </tbody>
                </table>

            </div>
            <ul uib-pagination boundary-links="true" total-items="vm.totalAccounts" items-per-page="vm.pageSize" ng-model="vm.currentPageNumber" ng-change="vm.pageChanged()"></ul>
        </rd-widget-body>
    </rd-widget>
</div>