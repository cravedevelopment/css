<div ng-controller="bankDepositInstructionEditController as vm" ng-init="vm.initializeController()">
    <rd-widget>
        <rd-widget-header icon="fa-tasks" title="{{vm.title}}">
        </rd-widget-header>
        <rd-widget-body>
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-sm-2 control-label required">Reference No.</label>
                    <input type="text" class="form-control" ng-model="vm.ReferenceNo">
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label required">Date Deposit</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" ng-model="vm.DateDeposit">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Select Bank</label>
                    <div class="col-sm-4">
                        <select class="form-control" ng-model="vm.BankId" ng-options="b.BankId as b.BankName for b in vm.banks" ng-class="{'validation-error': vm.BankSourceInputError}"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label required">Account Number</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" ng-model="vm.AccountNumber">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label required">Account Name</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" ng-model="vm.AccountName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Amount</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" ng-model="vm.Amount">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Select Deposit Transaction</label>
                    <div class="col-sm-4">
                        <select class="form-control" ng-model="vm.TypeId" ng-options="b.TypeId as b.typeName for b in vm.transactionTypes"></select>
                    </div>
                </div>
            </form>
            <button class="btn btn-primary btn-label-left" ui-sref="depositinstructions" href="#/depositinstructions">
                <span><i class="fa fa-arrow-left"></i></span>
                <b>Back</b>
            </button>
            <button class="btn btn-success btn-label-left" ng-click="vm.saveInstruction()">
                <span><i class="fa fa-save"></i></span>
                <b>Save</b>
            </button>
            <div style="padding-top:20px">
                <div uib-alert ng-repeat="alert in vm.alerts" ng-class="'alert-' + (alert.type || 'warning')" close="vm.closeAlert($index)">
                    <div ng-bind-html="vm.messageBox"></div>
                </div>
            </div>
        </rd-widget-body>
    </rd-widget>
</div>