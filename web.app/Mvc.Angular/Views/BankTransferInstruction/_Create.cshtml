<div ng-controller="bankTransferInstructionCreateController as vm" ng-init="vm.initializeController()">
    <rd-widget>
        <rd-widget-header icon="fa-tasks" title="{{vm.title}}">
        </rd-widget-header>
        <rd-widget-body>
            <div class="box" style="width: 100%">
                <div class="box-content">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-6">
                                    <label class="col-sm-6 control-label">Select a source Account</label>
                                    <select class="form-control" ng-model="vm.selectedBankAccount" ng-options="bs as bs.Bank.BankCode + '  (' + (bs.AccountNumber) + ') --- ' + bs.AccountName for bs in vm.sourceAccounts"
                                            ng-class="{'validation-error': vm.BankSourceInputError}" ng-change="vm.sourceAccountChange(vm.selectedBankAccount)"></select>
                                </div>
                                <div class="col-lg-6">
                                    <label class="col-sm-6 control-label">Select a destination Account</label>
                                    <select class="form-control" ng-model="vm.DestinationBankId" ng-options="bd.BankId + '|' + bd.AccountId + '|' + bd.Bank.BankCode as bd.Bank.BankCode + '  (' + (bd.AccountNumber) + ') --- ' + bd.AccountName for bd in vm.destinationAccounts"
                                            ng-class="{'validation-error': vm.BankDestinationError}"></select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-6">
                                    <label class="col-sm-6 control-label">Amount</label>
                                    <input type="number" class="form-control" ng-model="vm.Amount">
                                </div>
                                <div class="col-lg-6">
                                    <label class="col-sm-6 control-label">P2P Transaction Number</label>
                                    <input type="text" class="form-control" ng-model="vm.P2PTransactionNumber">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-6">
                                    <label class="col-sm-6 control-label">P2P Transaction</label>
                                    <input type="text" class="form-control" ng-model="vm.P2PLendingRefNo">
                                </div>
                                <div class="col-lg-6">
                                    <label class="col-sm-6 control-label">Remarks</label>
                                    <input type="text" class="form-control" ng-model="vm.Remarks">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-6">
                                    <label class="col-sm-6 control-label">Lender ID</label>
                                    <input type="text" class="form-control" ng-model="vm.LenderId">
                                </div>
                                <div class="col-lg-6">
                                    <label class="col-sm-6 control-label">Borrower ID</label>
                                    <input type="text" class="form-control" ng-model="vm.BorrowerId">
                                </div>
                            </div>
                        </div>
                        @*<div class="form-group">
                                <div class="row">

                                    <div class="col-lg-6">
                                        <label class="col-sm-6 control-label">Transfer Transaction Number</label>
                                        <input type="text" class="form-control" ng-model="vm.TransferTransactionNumber">
                                    </div>
                                </div>
                            </div>*@
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-6">
                                    <label class="col-sm-6 control-label">Transaction Date</label>
                                    <input type="text" class="form-control" ng-click="vm.openTransactionDate()" uib-datepicker-popup ng-model="vm.TransactionDate" is-open="vm.popupTransactionDate.opened" datepicker-options="dateOptions" close-text="Close" />
                                </div>
                                @*<div class="col-lg-6">
                                        <label class="col-sm-6 control-label">Date Transfered</label>
                                        <input type="text" class="form-control" ng-model="vm.DateTransferred" ng-click="vm.openDateTransfered()"
                                               uib-datepicker-popup is-open="vm.popupDateTransfered.opened" datepicker-options="dateOptions" close-text="Close" />
                                    </div>*@
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <button class="btn btn-primary btn-label-left" ui-sref="transferinstructions" href="#/transferinstructions">
                <span><i class="fa fa-arrow-left"></i></span>
                <b>Back</b>
            </button>
            <button class="btn btn-primary btn-label-left" ng-click="vm.saveInstrunc()">
                <span><i class="fa fa-save"></i></span>
                <b>Save</b>
            </button>
            <div style="padding-top: 20px">
                <div uib-alert ng-repeat="alert in vm.alerts" ng-class="'alert-' + (alert.type || 'warning')" close="vm.closeAlert($index)">
                    <div ng-bind-html="vm.messageBox"></div>
                </div>
            </div>
        </rd-widget-body>
    </rd-widget>
</div>