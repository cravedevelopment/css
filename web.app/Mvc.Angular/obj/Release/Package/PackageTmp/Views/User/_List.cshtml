<div ng-controller="usersController as vm" ng-init="vm.initializeController()">
    <rd-widget>
        <rd-widget-header icon="fa-tasks" title="{{vm.title}}">
        </rd-widget-header>
        <rd-widget-body>
            <div class="table-responsive" style="padding-top: 20px;">
                <button class="btn btn-primary btn-label-left" ui-sref="newUser">
                    <span><i class="icon-pencil"></i></span>
                    <b>New User</b>
                </button>
                <div class="pull-right"><input type="text" class="form-control" placeholder="Search User" ng-model="searchUser"/>
                </div>
                <table class="table" style="width: 100%; margin-top: 30px;">
                    <thead>

                    <tr>
                        <th colspan="2" style="width: 50%">
                            <span ng-bind="vm.totalUsers"></span>&nbsp;Users
                        </th>
                        <th colspan="5" style="text-align: right; width: 50%">
                            Page&nbsp;<span ng-bind="vm.currentPageNumber"></span>&nbsp;of&nbsp;
                            <span ng-bind="vm.totalPages"></span>
                        </th>
                    </tr>

                    <tr>
                        <th ng:repeat="tableHeader in vm.tableHeaders" style="text-decoration: underline" ng:class="vm.setSortIndicator(tableHeader.label)" ng:click="vm.changeSorting(tableHeader.label)">{{tableHeader.label}}</th>
                    </tr>

                    </thead>
                    <tbody>
                    <tr ng-repeat="u in vm.users | filter : searchUser">

                        <td style="width: 30%; white-space: nowrap">
                            <div ng-bind="u.User.FirstName"></div></td>
                        <td style="width: 30%; white-space: nowrap">
                            <div ng-bind="u.User.LastName"></div>
                        </td>
                        <td style="width: 30%; white-space: nowrap">
                            <div ng-bind="u.User.EmailAddress"></div>
                        </td>
                        <td style="width: 20%; white-space: nowrap"><a ui-sref="editUser({ id: u.UserId})" style="cursor: pointer; text-decoration: underline; color: black">Edit</a></td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <ul uib-pagination boundary-links="true" total-items="vm.totalUsers" items-per-page="vm.pageSize" ng-model="vm.currentPageNumber" ng-change="vm.pageChanged()"></ul>
        </rd-widget-body>
    </rd-widget>
</div>