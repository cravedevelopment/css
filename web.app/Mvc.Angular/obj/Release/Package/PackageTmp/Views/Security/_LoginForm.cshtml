

    <div ng-controller="loginController as vm" ng-init="vm.initializeController()">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong class="">Sign in to your account</strong>
                    </div>
                    <div class="panel-body">
                        <form class="form-horizontal" ng-submit="vm.loginAttempt">
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Username</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control required" placeholder="Username" ng-model="vm.UserName" ng-class="{'validation-error': vm.UserNameInputError}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Password</label>
                                <div class="col-sm-9">
                                    <input type="password" class="form-control required" placeholder="Password" ng-model="vm.Password" ng-class="{'validation-error': vm.UserPasswordInputError}">
                                </div>
                            </div>
                            @*<div class="form-group">
                                    <div class="col-sm-offset-3 col-sm-9">
                                        <div class="checkbox">
                                            <label class="">
                                                <input type="checkbox" class="">Remember me
                                            </label>
                                        </div>
                                    </div>
                                </div>*@


                            <div class="form-group last">

                                <div class="col-sm-offset-3 col-sm-9">
                                    <button type="submit" class="btn btn-success btn-sm" ng-click="vm.loginAttempt()"><i class="icon-signin"></i> Sign in</button>
                                </div>
                            </div>
                            <div uib-alert ng-repeat="alert in vm.alerts" ng-class="'alert-' + (alert.type || 'warning')" close="vm.closeAlert($index)">
                                <div ng-bind-html="vm.messageBox"></div>
                            </div>
                        </form>
                    </div>
                    <div class="panel-footer">

                    </div>
                </div>
            </div>
        </div>
    </div>